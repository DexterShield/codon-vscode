{
    "comments": {
        "lineComment": "#",
        "blockComment": [
            {
                "open": "\"\"\"",
                "close": "\"\"\""
            },
            {
                "open": "'''",
                "close": "'''"
            }
        ],
    },
    "brackets": [
        [
            "{",
            "}"
        ],
        [
            "[",
            "]"
        ],
        [
            "(",
            ")"
        ]
    ],
    "autoClosingPairs": [
        {
            "open": "{",
            "close": "}"
        },
        {
            "open": "[",
            "close": "]"
        },
        {
            "open": "(",
            "close": ")"
        },
        {
            "open": "\"",
            "close": "\"",
            "notIn": [
                "string"
            ]
        },
        {
            "open": "'",
            "close": "'",
            "notIn": [
                "string",
                "comment"
            ]
        },
        {
            "open": "\"\"\"",
            "close": "\"\"\""
        },
        {
            "open": "'''",
            "close": "'''"
        }
    ],
    "surroundingPairs": [
        [
            "{",
            "}"
        ],
        [
            "[",
            "]"
        ],
        [
            "(",
            ")"
        ],
        [
            "\"",
            "\""
        ],
        [
            "'",
            "'"
        ],
        [
            "\"\"\"",
            "\"\"\""
        ],
        [
            "'''",
            "'''"
        ]
    ],
    "indentationRules": {
        "increaseIndentPattern": "^\\s*(def|class|for|if|elif|else|while|try|with|finally|except|async)\\s.*:\\s*$",
        "decreaseIndentPattern": "^\\s*(return|pass|break|continue|raise)\\b.*$"
    },
    "folding": {
        "markers": {
            "start": "^\\s*#\\s*region\\b",
            "end": "^\\s*#\\s*endregion\\b"
        }
    }
}