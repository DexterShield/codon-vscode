{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Codon",
    "scopeName": "source.codon",
    "patterns": [
        {
            "include": "#codon-decorators"
        },
        {
            "include": "#codon-keywords"
        },
        {
            "include": "#codon-types"
        },
        {
            "include": "#llvm-blocks"
        },
        {
            "include": "source.python"
        },
        {
            "include": "#c-imports"
        }
    ],
    "repository": {
        "codon-decorators": {
            "patterns": [
                {
                    "name": "meta.decorator.codon",
                    "match": "@(par|gpu|prefetch|export|thread|inline|llvm|tuple|__inline__|property|staticmethod|classmethod|dataclass)\\b",
                    "captures": {
                        "1": {
                            "name": "entity.name.function.decorator.codon"
                        }
                    }
                }
            ]
        },
        "codon-keywords": {
            "patterns": [
                {
                    "name": "keyword.control.codon",
                    "match": "\\b(match|case|extend|type|pydef|pyvars)\\b"
                },
                {
                    "name": "keyword.other.codon",
                    "match": "\\b(fn|struct|tuple)\\b"
                }
            ]
        },
        "codon-types": {
            "patterns": [
                {
                    "name": "support.type.codon",
                    "match": "\\b(ptr|Ptr|Array|DynamicArray|Optional|Union|Callable)\\b"
                },
                {
                    "name": "support.type.primitive.codon",
                    "match": "\\b(Int|UInt|i8|i16|i32|i64|u8|u16|u32|u64|float16|bfloat16|float32|float64|float128)\\b"
                },
                {
                    "name": "support.type.c.codon",
                    "match": "\\b(c_char|c_int|c_short|c_long|c_float|c_double|c_void|c_size_t)\\b"
                }
            ]
        },
        "c-imports": {
            "patterns": [
                {
                    "name": "meta.import.c.codon",
                    "begin": "\\bfrom\\s+C\\s+import\\b",
                    "end": "$|;",
                    "beginCaptures": {
                        "0": {
                            "name": "keyword.control.import.codon"
                        }
                    },
                    "patterns": [
                        {
                            "name": "entity.name.function.c.codon",
                            "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
                        },
                        {
                            "name": "punctuation.separator.codon",
                            "match": ","
                        }
                    ]
                }
            ]
        },
        "llvm-blocks": {
            "patterns": [
                {
                    "name": "meta.embedded.block.llvm",
                    "begin": "@llvm",
                    "end": "(?=\\bdef\\b|\\bclass\\b|^\\S)",
                    "patterns": [
                        {
                            "name": "string.quoted.triple.llvm",
                            "begin": "\"\"\"",
                            "end": "\"\"\"",
                            "patterns": [
                                {
                                    "name": "keyword.llvm",
                                    "match": "\\b(define|declare|ret|br|switch|add|sub|mul|icmp|fcmp|alloca|load|store|getelementptr|phi|call)\\b"
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    }
}